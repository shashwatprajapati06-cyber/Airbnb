<%- include('../partials/head') %>
<body class="bg-white">
<%- include('../partials/nav') %>

<main class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">

    <!-- Heading -->
    <div class="text-center mb-12">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        It's easy to get started on Airbnb
      </h1>
      <p class="text-lg text-gray-600">
        List your home and start earning today
      </p>
    </div>

    <!-- Form -->

    <form 
      action="/bookings" 
      method="POST" 
      class="bg-white rounded-2xl shadow-lg p-8 space-y-8"
    >

      <div class="space-y-6">

        <!-- Date + Days -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-3">
              Check-in Date
            </label>
            <input
              type="date"
              name="date"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg
                     focus:outline-none focus:ring-2 focus:ring-rose-500"
            />
          <input type="hidden" name="id" value="<%= home.id %>"> Id

          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-900 mb-3">
              No. of Days
            </label>
            <input
              type="number"
              name="days"
              min="1"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg
                     focus:outline-none focus:ring-2 focus:ring-rose-500"
            />
          </div>
        </div>

        <!-- Persons -->
        <div>
          <label class="block text-sm font-semibold text-gray-900 mb-3">
            No. of Persons
          </label>
          <input
            type="number"
            name="persons"
            min="1"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg
                   focus:outline-none focus:ring-2 focus:ring-rose-500"
          />
        </div>

      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-rose-500 hover:bg-rose-600 text-white
               font-bold py-3 px-6 rounded-lg transition
               shadow-md hover:shadow-lg active:scale-95"
      >
        Pay Now !!!
      </button>

    </form>
  </div>
</main>

</body>
</html>
