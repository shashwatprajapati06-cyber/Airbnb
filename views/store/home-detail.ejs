<%- include('../partials/head') %>
<body class="bg-white">
  <%- include('../partials/nav') %>

  <div class="min-h-screen bg-gradient-to-b from-gray-50 via-white to-gray-100 pt-20">
    <div class="mx-auto max-w-8xl px-4 py-12 sm:px-6 lg:px-8">

      <!-- Image Gallery -->
      <div class="mb-12 group relative">
        <div class="absolute inset-0 bg-gradient-to-r from-rose-500 to-pink-500 rounded-3xl blur-2xl opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
        
        <div class="relative h-96 overflow-hidden rounded-3xl shadow-2xl transition-all duration-300">
          <img 
            src="<%= home.photoUrl %>" 
            alt="<%= home.homeName %> in <%= home.location %>"
            class="h-full w-full object-cover group-hover:scale-110 transition-transform duration-500"
          >
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">

        <!-- LEFT COLUMN -->
        <div class="lg:col-span-2 space-y-8">

          <div>
            <h1 class="mb-4 text-6xl font-black bg-clip-text text-transparent bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 leading-tight">
              <%= home.homeName %>
            </h1>

            <div class="flex flex-wrap items-center gap-3">
              <span class="inline-flex items-center gap-2 bg-yellow-100 text-yellow-900 px-4 py-2 rounded-full font-bold text-lg shadow-sm">
                ‚òÖ <%= home.rating %>
              </span>

              <span class="inline-flex items-center gap-2 text-gray-600 font-medium px-4 py-2 bg-gray-100 rounded-full">
                üìç <%= home.location %>
              </span>
            </div>
          </div>

          <!-- About Section -->
          <div class="border-t-2 border-b-2 border-gray-200 py-8">
            <h2 class="mb-6 text-4xl font-bold text-gray-900">
              About this place
            </h2>

            <p class="text-gray-700 leading-relaxed text-lg">
              Home ID:
              <span class="inline-block bg-gray-100 px-3 py-1 rounded-lg font-semibold text-gray-900">
                <%= home.id %>
              </span>
            </p>

            <div class="mt-6 grid grid-cols-3 gap-4">
              <div class="p-4 bg-blue-50 rounded-xl border border-blue-100">
                <p class="text-2xl font-bold text-blue-600">üõèÔ∏è</p>
                <p class="text-sm text-gray-600 mt-2 font-medium">
                  <%= home.bedrooms %> Bedrooms
                </p>
              </div>

              <div class="p-4 bg-green-50 rounded-xl border border-green-100">
                <p class="text-2xl font-bold text-green-600">üöø</p>
                <p class="text-sm text-gray-600 mt-2 font-medium">
                  <%= home.bathrooms %> Bathrooms
                </p>
              </div>

              <div class="p-4 bg-purple-50 rounded-xl border border-purple-100">
                <p class="text-2xl font-bold text-purple-600">üë•</p>
                <p class="text-sm text-gray-600 mt-2 font-medium">
                  <%= home.guests %> Guests
                </p>
              </div>
            </div>
          </div>

        </div>

        <!-- RIGHT COLUMN (BOOKING CARD) -->
        <div class="lg:col-span-1">
          <div class="sticky top-24 rounded-3xl border-2 border-gray-100 p-8 shadow-2xl bg-white transition-all duration-300 hover:border-rose-200">

            <!-- Price -->
            <div class="mb-6 pb-6 border-b-2 border-gray-100">
              <div class="flex items-baseline gap-1">
                <span class="text-3xl font-bold text-gray-900">$</span>
                <span class="text-5xl font-black bg-clip-text text-transparent bg-gradient-to-r from-rose-600 to-pink-600">
                  <%= home.price %>
                </span>
              </div>
              <p class="text-gray-500 font-semibold mt-2">per night</p>
            </div>

            <!-- Reserve Button -->
            <a href="/booking/<%= home.id %>"
               class="block text-center mb-6 w-full rounded-xl bg-gradient-to-r from-rose-500 to-rose-600 py-4 px-6 font-bold text-white text-lg transition-all duration-200 hover:shadow-2xl hover:shadow-rose-500/40 hover:scale-105 active:scale-95">
              Reserve Now
            </a>

            <!-- Rating Box -->
            <div class="space-y-4">
              <div class="flex justify-between items-center p-4 bg-gray-50 rounded-xl border border-gray-200">
                <span class="text-gray-700 font-medium">Rating</span>
                <span class="font-bold text-lg text-gray-900">
                  ‚òÖ <%= home.rating %>
                </span>
              </div>

              <p class="text-xs text-gray-500 text-center pt-4">
                ‚úì Free cancellation until 24 hours before
              </p>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</body>
</html>
