<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/nav') %>

  <main class="max-w-7xl mx-auto px-6 py-12">
    <div class="mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        Here are your favourite-list of  Homes, <span class="text-blue-600">Shashwat</span>
      </h1>
      <p class="text-gray-600 text-lg">Discover amazing places to stay</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    
      <% wishlist.forEach(home => { %>
     
  
      <div class="bg-white rounded-xl shadow-md hover:shadow-2xl transition-shadow duration-300 overflow-hidden group cursor-pointer flex flex-col h-full relative">
      
        
        <div class="relative h-64 overflow-hidden bg-gray-200">
          <img src="<%= home.photoUrl %>" alt="<%= home.homeName %>" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
        </div>
        
        <div class="p-6 flex flex-col flex-grow">
          <h2 class="text-lg font-semibold text-gray-900 truncate mb-2"><%= home.homeName %></h2>
          <p class="text-gray-600 text-sm mb-4">üìç <%= home.location %></p>
          
          <div class="flex justify-between items-center mt-auto pt-4 border-t border-gray-200">
            <div>
              <span class="text-2xl font-bold text-gray-900">$<%= home.price %></span>
              <span class="text-gray-600 text-xs ml-1">/night</span>
            </div>
            <div class="flex items-center gap-1">
              <span class="text-yellow-400">‚òÖ</span>
              <span class="text-sm font-medium text-gray-700"><%= home.rating %></span>
            </div>
          </div>

          <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg mt-4 w-full font-medium transition-colors duration-200">
            <a href="/booking" class="block">Book</a>
          </button>
          <button class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg mt-2 w-full font-medium transition-colors duration-200">
            <a href="/home-list/<%= home.id %>" class="block">View Details</a>
          </button>
        </div>
      </div>
      <% }) %>
    </div>
  </main>
</body>
</html>